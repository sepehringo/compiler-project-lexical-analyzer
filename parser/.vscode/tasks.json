{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build parser project (gcc)",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/parser.c",
                "${workspaceFolder}/grammar.c",
                "${workspaceFolder}/func.c",
                "-o",
                "${workspaceFolder}/parser",
                "-Wall",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Builds the parser executable from parser.c, grammar.c, and func.c using gcc."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "lexicons.txt"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}